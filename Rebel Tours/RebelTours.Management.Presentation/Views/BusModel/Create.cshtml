@model BusModelDTO

<h3>Model Ekle</h3><br />
@if (ViewBag.ErrorMessage != null)
{
    <div class="row">
        <div class="col-12 col-sm-6 col-md-7">
            <div class="alert-danger alert">
                
                @ViewBag.Error
            </div>
        </div>
    </div>
}



<div class="row">

    <div class="col-12 col-md-8 col-sm-5">
        <form method="post" asp-action="Create" asp-controller="BusModel">

            <div class="mb-3">
                <label asp-for="Name">Model Adı</label>
                <input asp-for="Name" class="form-control" type="text" autocomplete="off" />
            </div>

            <div>     
                <label asp-for="BusManufacturerId">Üretici Adı</label>
                <select asp-for="BusManufacturerId" asp-items="ViewBag.busManu" class="form-control mb-3">
                </select>
               
            </div>
            <div>
                <label asp-for="Type">Tipi</label>
                <select class="form-control" asp-for="Type" asp-items="@Html.GetEnumSelectList<BusType>()">
                </select>
            </div>
            <div>
                <label class="mt-3" asp-for="SeatCapacity">Kapasite Girin</label>
                <input asp-for="SeatCapacity" class="form-control" type="number" autocomplete="off" />
            </div>
            <div >
                <label   asp-for="HasToilet">WC</label>
                <input  asp-for="HasToilet"   type="checkbox" autocomplete="off" />
            </div>

            <div class="float-right">
                <button type="submit" class="btn btn-primary">
                    Kaydet
                </button>
            </div>

        </form>

    </div>
</div>