@model BusDTO

@if (ViewBag.ErrorMessage != null)
{
    <div class="row">
        <div class="col-12 col-sm-6 col-md-7">
            <div class="alert-danger alert">            
                @ViewBag.Error
            </div>
        </div>
    </div>
}



<div class="row">

    <div class="col-12 col-md-8 col-sm-5">
        <form method="post" asp-action="Update" asp-controller="Bus">
            <input type="hidden" asp-for="Id" />

            <div>
                <label class="mt-3" asp-for="SeatMapping">Oturma Düzeni</label>
                 <select class="form-control" asp-for="SeatMapping" asp-items="@Html.GetEnumSelectList<SeatingType>()"></select>
            </div>

             <div>
                <label asp-for="DistanceTraveled">KM</label>
                <input asp-for="DistanceTraveled" class="form-control" type="number" autocomplete="off" />
            </div>
                       

            <div class="float-right">
                <button type="submit" class="btn btn-secondary">
                    Kaydet
                </button>
            </div>

        </form>

    </div>
</div>