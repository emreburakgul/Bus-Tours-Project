@model BusDTO

<div class="row">
    <div class="col-12 col-md-8 col-sm-4">
        <div class="alert alert-warning">
            <label>Dikkat!!! Silmek istediğine emin misin?</label>
        </div>
    </div>
</div>
}



<div class="row">

    <div class="col-12 col-md-8 col-sm-5">
        <form method="post" asp-action="Delete" asp-controller="Bus">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="BusModelId">Model Seç</label>
                <input value="@ViewBag.BusModel" class="form-control" type="text" autocomplete="off"  disabled/>
            </div>

            <div>
                <label asp-for="RegistrationPlate">Plaka</label>
                <input asp-for="RegistrationPlate" class="form-control" type="text" autocomplete="off" disabled/>

            </div>
            <div>
                <label asp-for="Year">Üretim Yıl</label>
                <input asp-for="Year" class="form-control" type="number" autocomplete="off" disabled/>
            </div>
            <div>
                <label class="mt-3" asp-for="SeatMapping">Oturma Düzeni</label>
                 <input value="@ViewBag.SelectedType" class="form-control" type="text" autocomplete="off" disabled/>
            </div>
            <div>
                <label asp-for="DistanceTraveled">KM</label>
                <input asp-for="DistanceTraveled" class="form-control" type="number" autocomplete="off" disabled />
            </div>

            <div class="float-right">
                <button type="submit" class="btn btn-warning">
                    Onayla
                </button>
                <a class="btn btn-success" asp-action="Index" asp-controller="Bus">
                    İptal
                </a>
            </div>

        </form>

    </div>
</div>