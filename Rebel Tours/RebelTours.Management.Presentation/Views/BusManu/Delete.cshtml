        <div class="mb-3 ">
            <label>Tedarikçi Adı</label>
            <input class="form-control" asp-for="Name" type="text" placeholder="Disabled input"  disabled>           

        </div>
            <div class="float-right">
                <button type="submit" class="btn btn-warning">
                    Onayla
                </button>
                <a class="btn btn-success"  asp-action="Index" asp-controller="BusManu">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>